<div class="user-container">
  <%= render partial: "shared/users", locals: { user: @user } %>
</div>

<div class="post-container">
  <% @user.all_posts.each do |post| %>
    
    <%= link_to user_post_path(@user.id, post.id) do%>
      <%= render partial: "shared/posts", locals: { post: post } %>
    <%end%>

    <% post.recent_comments.each do |comment| %>
      <%= render partial: "shared/comments", locals: { comment: comment } %>
    <% end %>

  <% end %>
</div>
