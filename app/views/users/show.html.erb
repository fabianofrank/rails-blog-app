<div class="user-container">
  <%= render partial: "shared/users", locals: { user: @user } %>
</div>

<div class="bio-container">
  <h3>Bio</h3>
  <p><%= @user.bio %></p>
</div>

<div class="post-container">
  <% @user.recent_posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id) do%>
      <%= render partial: "shared/posts", locals: { post: post } %>
    <%end%>
  <% end %>
</div>

<%= render partial: "shared/button", locals: { user: @user } %>