<div class="user-profile">
  
  <div class="user-header">
    <div>
      <%= render partial: "shared/users", locals: { user: @user } %>
    </div>
  </div>
  
  <div class="bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  <% @user.recent_posts.each do |post| %>
      <%= render partial: "shared/posts", locals: { post: post } %>
  <% end %>

</div>