
<li class="user-header">
  <%= link_to user_path(user.id) do%>     
    <div>
      <%= image_tag(image_url(user.photo), :alt => "#{user.name}'s profile photo") %>
    </div>
    <div>
      <h2><%= user.name %></h2>
      <h2><%= user.id %></h2>
      <span>Posts: <%= user.posts_counter %></span>
    </div>
  <%end%>
</li>